{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "@routes/*": ["./src/routes/*"],
      "@screens/*": ["./src/screens/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@theme/*": ["./src/theme/*"],
      "@config/*": ["./src/config/*"],
      "@components/*": ["./src/components/*"],
      "@functions/*": ["./src/functions/*"],
      "@api/*": ["./src/api/*"],
      "@types/*": ["./src/types/*"]
    }
  }
}


